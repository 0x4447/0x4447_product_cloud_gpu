{
    "VolumeData": {
    "Type": "AWS::EC2::Volume",
        "Properties": {
            "VolumeType": "gp2",
            "Size": 1000,
            "AvailabilityZone": { "Fn::GetAtt": [ "EC2Instance", "AvailabilityZone" ] },
            "SnapshotId": { "Fn::If": [ "SnapshotIdDataCondition", { "Ref": "SnapshotIdDataParam" }, {"Ref" : "AWS::NoValue"} ] },
            "Tags": [
                {
                    "Key": "Name",
                    "Value": "video-editing-data"
                }
            ]
        }
    }
}
